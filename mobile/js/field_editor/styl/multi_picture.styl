.com-field-multi-picture
  .van-cell__title
    max-width 90px
  .van-cell__value
    text-align left
  .add-btn
    transform :scale(0.8);
    width: 60px;
    height: 60px;
    position: relative;
    display: inline-block;
    margin 10px
    .inn-btn
      background-color: #e2e2e2;
      border: 1px solid #e2e2e2;
      width: 60px;
      height: 60px;
      position: relative

  .img-wrap
    vertical-align top
    display inline-block
    width 60px
    height 60px
    position relative
    margin 10px
    img
      height 100%
      width 100%
    .close
      position absolute
      top 0
      right .3rem
