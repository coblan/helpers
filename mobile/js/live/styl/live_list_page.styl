.com-live-list-page
  position relative
  height var(--app-height)
  .van-nav-bar
    position: fixed
    top 0
    left 0
    right 0

  .middle-wrap
    height calc( var(--app-height) - 120px )
    overflow-y  auto

  .footer
    position:absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: .82rem;
    background-color white

  .van-pagination__page-desc
    position relative
    left -.6rem
    flex 2
  .total-count
    color grey
    position: absolute
    top:.26rem;
    right: 2.7rem;
