.com-xiu-menu
  background-color white
  height 66px
  line-height 66px
  vertical-align middle
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;

  .brand
    position absolute
    left 20px
  .menu
    display inline-block
    .action
      display inline-block
      padding 0 10px
      font-size 18px
      a
        text-decoration: none
        color #7b7b7b
        display inline-block
        position relative
        &:hover,&.active
          color #5e8ac6
          &::after
            content ''
            display block
            position absolute
            height 2px
            width 100%
            background-color #5e8ac6
            bottom 5px
